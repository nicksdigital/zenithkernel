{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "types": ["bun-types"],
    "baseUrl": ".",
    "paths": {
      "@zenithkernel/core/src/*": ["../packages/zenith-core/src/*"],
      "@zenithkernel/runtime/hydra": ["../runtime/hydra/index.ts"],
      "@zenithkernel/runtime/codec": ["../runtime/codec/index.ts"],
      "@zenithkernel/runtime/*": ["../runtime/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
